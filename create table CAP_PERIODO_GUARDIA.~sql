-- Create table
create table CAP_PERIODO_DIAS
(
  dia_clave        NUMBER not null,
  dia_nombre       NUMBER not null,
  dia_hora_entrada DATE default to_DATE('01/01/2018 07:00:00','DD/MM/YYYY HH24:MI:SS'),
  dia_hora_salida  DATE default to_DATE('01/01/2018 07:00:00','DD/MM/YYYY HH24:MI:SS')
)
alter table CAP_PERIODO_DIAS
  add constraint FKS_PERI_DIA foreign key (DIA_CLAVE)
  references CAP_PERIODO_GUARDIA (PERG_CLAVE) on delete cascade;
